@page
@model IndexModel

<h2>Create Transaction</h2>

<form method="post">
    <div>
        <label>Account Number</label>
        <input asp-for="Transaction.AccountNumber" class="form-control" />
    </div>
    <div>
        <label>Amount</label>
        <input asp-for="Transaction.Amount" type="number" step="0.01" class="form-control" />
    </div>
    <div>
        <label>Transaction Type</label>
        <input asp-for="Transaction.TransactionType" class="form-control" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ResponseJson))
{
    <div class="card mt-4">
        <div class="card-header">
            API Response
        </div>
        <div class="card-body">
            <pre>@Model.ResponseJson</pre>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-header">
            Tracing Response
        </div>
        <div class="card-body">
            <pre><b>trace-id:</b>@Model.TraceId</pre>
            <pre><b>x-client-request-id:</b> @Model.ClientRequestId</pre>
        </div>
    </div>
}
